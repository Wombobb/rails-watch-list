<div class="container mt-4">
<h1> <%= @list.name.capitalize %> </h1>
<%= link_to "back", lists_path, class: "btn btn-primary text-decoration-none mt-4" %>
<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary text-decoration-none mt-4" %>
<div class="row">
  <% @bookmarks.each do |bookmark| %>
    <div class="card mb-3" style="max-width: 540px">
      <div class="row g-0">
        <div class="col-md-4">
          <%= image_tag bookmark.movie.poster_url, class: "img-fluid rounded-start" %>
        </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= bookmark.movie.title %></h5>
              <p class="card-text"><%= bookmark.movie.overview%></p>
              <div class="s">
                <p class="card-text"><%= bookmark.comment %></p>
                <p class="card-text"><%= bookmark.movie.rating %></p>
                <%= link_to "delete", bookmark_path(bookmark), data: { turbo_method: 'delete' }, class: 'btn btn-primary text-decoration-none mt-4' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


</div>
