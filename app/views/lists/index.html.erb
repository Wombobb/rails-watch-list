<div class="container mt-4 text-center">
  <h1>Your movie lists</h1>
  <ul class="list-group list-group-flush">
    <div class="card d-flex m-4">
      <% @lists.each do |list| %>
        <div class="item card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU' %>)">
          <h1><%=link_to list.name, list_path(list), class: "" %></h1>
        </div>
      <% end %>
    </div>
  </ul>
  <%= link_to "Make a new list", new_list_path, class: "btn btn-primary text-decoration-none mt-4" %>
</div>
